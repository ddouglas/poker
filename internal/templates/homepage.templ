package templates

import ("poker")

templ (s *Service) Homepage(ctx context.Context, user *poker.User) {
	<!DOCTYPE html>
	<html lang="en">
		@s.top()
		@s.navbar(ctx, user)
		<div class="banner">
			<div class="overlay">
				<div class="mt-5">
					<h1>Red | Ventures Poker</h1>
					<hr/>
					<p class="text-center">Free Food, Free Drinks, Great Time!</p>
					<p class="text-center"><button class="btn btn-primary">Sign Up</button></p>
				</div>
			</div>
		</div>
		@s.bottom()
	</html>
}

